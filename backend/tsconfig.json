{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "scripts"],
  "exclude": ["dist"]
}
